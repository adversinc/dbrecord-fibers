{
	"compilerOptions": {
		"sourceMap": true,
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"module": "commonjs",
		"target": "ES2018",
		"declaration": true,
		"preserveSymlinks": true,

		"typeRoots" : ["./node_modules/@types", "./typings"],

		"baseUrl": "./",
		"paths" : {
			"/*": ["./*"]
		},

		"outDir": "lib"
	},

	"include": [
		"./src/*"
	]
}
